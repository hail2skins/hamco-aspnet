@model IEnumerable<Hamco.Core.Models.Note>
@{
    Layout = "_Layout";
}

<div class="row gx-4 gx-lg-5 justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-7">
        @if (Model.Any())
        {
            @foreach (var note in Model)
            {
                <div class="post-preview">
                    <a asp-controller="NotesView" asp-action="Detail" asp-route-id="@note.Id">
                        <h2 class="post-title">@note.Title</h2>
                        <h3 class="post-subtitle">
                            @if (note.Content.Length > 200)
                            {
                                @note.Content.Substring(0, 200)@:...
                            }
                            else
                            {
                                @note.Content
                            }
                        </h3>
                    </a>
                    <p class="post-meta">
                        Posted on @note.CreatedAt.ToString("MMMM dd, yyyy")
                        @if (note.UpdatedAt != note.CreatedAt)
                        {
                            <span> • Updated @note.UpdatedAt.ToString("MMMM dd, yyyy")</span>
                        }
                    </p>
                </div>
                <hr class="my-4" />
            }
        }
        else
        {
            <div class="post-preview">
                <h3>No notes yet</h3>
                <p>Check back soon for technical articles and insights.</p>
            </div>
        }
        
        <!-- Pager (future enhancement) -->
        <!-- <div class="d-flex justify-content-end mb-4">
            <a class="btn btn-primary text-uppercase" href="#!">Older Posts →</a>
        </div> -->
    </div>
</div>
