@model IEnumerable<Hamco.Core.Models.Note>
@{
    Layout = "_Layout";
    var excerpts = ViewBag.PlainTextExcerpts as Dictionary<int, string> ?? new Dictionary<int, string>();
}

<div class="row gx-4 gx-lg-5 justify-content-center">
    <div class="col-md-10 col-lg-10 col-xl-8">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 25%;">Title</th>
                            <th style="width: 35%;">Summary</th>
                            <th style="width: 12%;">Created</th>
                            <th style="width: 12%;">Updated</th>
                            <th style="width: 16%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var note in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-controller="NotesView" asp-action="Detail" asp-route-id="@note.Id" class="text-decoration-none fw-bold">
                                        @note.Title
                                    </a>
                                </td>
                                <td class="text-muted">
                                    @if (excerpts.ContainsKey(note.Id))
                                    {
                                        @excerpts[note.Id]
                                    }
                                </td>
                                <td>@note.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (note.UpdatedAt != note.CreatedAt)
                                    {
                                        @note.UpdatedAt.ToString("MMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">â€”</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-controller="NotesView" asp-action="Detail" asp-route-id="@note.Id" class="btn btn-outline-primary">View</a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-controller="AdminNotes" asp-action="Edit" asp-route-id="@note.Id" class="btn btn-outline-warning">Update</a>
                                            <a asp-controller="AdminNotes" asp-action="Delete" asp-route-id="@note.Id" class="btn btn-outline-danger">Delete</a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <h3>No notes yet</h3>
                <p class="text-muted">Check back soon for technical articles and insights.</p>
            </div>
        }
    </div>
</div>
