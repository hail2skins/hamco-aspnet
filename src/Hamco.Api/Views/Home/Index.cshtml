@model IEnumerable<Hamco.Core.Models.Note>
@{
    Layout = "_Layout";
    var excerpts = ViewBag.PlainTextExcerpts as Dictionary<int, string> ?? new Dictionary<int, string>();
}

<div class="row gx-4 gx-lg-5 justify-content-center">
    <div class="col-md-10 col-lg-10 col-xl-8">
        <div class="post-preview">
            <h2 class="post-title">Welcome to Hamco Internet Solutions</h2>
            <p class="post-meta">
                Your trusted partner in web development and internet solutions.
            </p>
        </div>
        <hr class="my-4" />
        <div class="post-preview">
            <h3>What We Do</h3>
            <p>
                We specialize in building modern web applications using cutting-edge technology.
                From API development to full-stack solutions, we deliver quality software that meets your needs.
            </p>
        </div>
        <hr class="my-4" />

        @if (Model.Any())
        {
            <div class="post-preview">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 class="mb-0">Recent Notes</h3>
                    <a asp-controller="NotesView" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
                </div>

                @foreach (var note in Model)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <a asp-controller="NotesView" asp-action="Detail" asp-route-id="@note.Id" class="text-decoration-none">
                                        <h5 class="card-title fw-bold">@note.Title</h5>
                                    </a>
                                    <p class="card-text">
                                        @if (excerpts.ContainsKey(note.Id))
                                        {
                                            @excerpts[note.Id]
                                        }
                                    </p>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            Posted @note.CreatedAt.ToString("MMM dd, yyyy")
                                            @if (note.UpdatedAt != note.CreatedAt)
                                            {
                                                <span>â€¢ Updated @note.UpdatedAt.ToString("MMM dd, yyyy")</span>
                                            }
                                        </small>
                                    </p>
                                </div>
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="btn-group btn-group-sm ms-2" role="group">
                                        <a asp-controller="AdminNotes" asp-action="Edit" asp-route-id="@note.Id" class="btn btn-outline-warning">Update</a>
                                        <a asp-controller="AdminNotes" asp-action="Delete" asp-route-id="@note.Id" class="btn btn-outline-danger">Delete</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="post-preview">
                <h3>Recent Notes</h3>
                <p class="text-muted">No notes yet. Check back soon for technical articles and insights.</p>
            </div>
        }
    </div>
</div>
