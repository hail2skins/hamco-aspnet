@model Hamco.Core.Models.Note
@{
    Layout = "_Layout";
    ViewBag.Title = "Delete Note";
}

<div class="row gx-4 gx-lg-5 justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-7">
        <h2>Delete Note</h2>

        <div class="alert alert-warning">
            <h4>Are you sure you want to delete this note?</h4>
            <p>This action cannot be undone.</p>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID:</dt>
                    <dd class="col-sm-9">@Model.Id</dd>

                    <dt class="col-sm-3">Title:</dt>
                    <dd class="col-sm-9">@Model.Title</dd>

                    <dt class="col-sm-3">Slug:</dt>
                    <dd class="col-sm-9">@Model.Slug</dd>

                    <dt class="col-sm-3">Created:</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>

                    <dt class="col-sm-3">Updated:</dt>
                    <dd class="col-sm-9">@Model.UpdatedAt.ToString("MMMM dd, yyyy")</dd>
                </dl>

                <div class="mt-3">
                    <h5>Content Preview:</h5>
                    <div class="border p-3 bg-light" style="max-height: 200px; overflow-y: auto;">
                        @if (Model.Content.Length > 300)
                        {
                            @Model.Content.Substring(0, 300)<text>...</text>
                        }
                        else
                        {
                            @Model.Content
                        }
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">Delete Note</button>
            </div>
        </form>
    </div>
</div>
